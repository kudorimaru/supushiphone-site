---
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'スプシフォンは、Googleスプレッドシートから直接Zoom Phoneで発信できる営業支援ツールです。ワンクリック発信・結果自動記録でコール数1.5〜2倍に。初期費用0円・月額5,000円から。',
  ogImage = '/images/og-image.png',
} = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:image" content={ogImage}>
  <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 68 80'%3E%3Cdefs%3E%3ClinearGradient id='g' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' stop-color='%232EBD59'/%3E%3Cstop offset='100%25' stop-color='%232D8CFF'/%3E%3C/linearGradient%3E%3C/defs%3E%3Crect x='6' y='6' width='56' height='68' rx='7' fill='none' stroke='url(%23g)' stroke-width='2.5'/%3E%3Crect x='7.2' y='7.2' width='53.6' height='16' rx='6' fill='url(%23g)' opacity='0.15'/%3E%3C/svg%3E">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Noto+Sans+JP:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  <style is:global>
    :root {
      --green: #2EBD59;
      --blue: #2D8CFF;
      --gradient: linear-gradient(135deg, #2EBD59, #2D8CFF);
      --gradient-hover: linear-gradient(135deg, #3DD468, #4DA1FF);
      --dark: #0F172A;
      --dark-light: #1E293B;
      --slate-900: #0F172A;
      --slate-800: #1E293B;
      --slate-700: #334155;
      --slate-600: #475569;
      --slate-500: #64748B;
      --slate-400: #94A3B8;
      --slate-300: #CBD5E1;
      --slate-200: #E2E8F0;
      --slate-100: #F1F5F9;
      --slate-50: #F8FAFC;
      --white: #FFFFFF;
      --font-ja: 'Noto Sans JP', 'Hiragino Kaku Gothic ProN', 'Yu Gothic UI', sans-serif;
      --font-en: 'Inter', 'Segoe UI', 'Helvetica Neue', sans-serif;
      --container-max: 1200px;
      --radius-sm: 8px;
      --radius-md: 12px;
      --radius-lg: 16px;
      --radius-xl: 24px;
      --shadow-sm: 0 1px 3px rgba(0,0,0,0.06), 0 1px 2px rgba(0,0,0,0.04);
      --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.07), 0 2px 4px -1px rgba(0,0,0,0.04);
      --shadow-lg: 0 10px 25px -3px rgba(0,0,0,0.08), 0 4px 6px -2px rgba(0,0,0,0.03);
      --shadow-xl: 0 20px 50px -12px rgba(0,0,0,0.12);
    }

    *, *::before, *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    body {
      font-family: var(--font-ja);
      color: var(--slate-800);
      line-height: 1.8;
      font-size: 16px;
      overflow-x: hidden;
      background: var(--white);
    }

    a {
      text-decoration: none;
      color: inherit;
      transition: all 0.3s ease;
    }

    img { max-width: 100%; display: block; }

    .container {
      max-width: var(--container-max);
      margin: 0 auto;
      padding: 0 24px;
    }
  </style>
</head>
<body>
  <slot />
</body>
</html>
