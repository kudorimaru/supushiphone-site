    <div class="terms-header-inner">
      <a href="/" class="terms-header-logo" aria-label="スプシフォン">
        <HeaderLogo variant="light" width={220} height={42} />
      </a>
      <a href="/" class="header-back">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M10 4l-4 4 4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        トップに戻る
      </a>
    </div>
  </header>

  <section class="page-title-section">
    <h1>利用規約</h1>
    <p>Terms of Service</p>
  </section>

  <main class="terms-container">
