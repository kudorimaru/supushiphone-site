---
import Base from '../../layouts/Base.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getPosts, getCategories, getFeaturedImageUrl, getCategoryNames, formatDate, stripHtml } from '../../lib/wordpress';

const { posts } = await getPosts({ perPage: 12 });
const categories = await getCategories();
---

<Base title="お知らせ - スプシフォン" description="スプシフォンの最新情報、セミナー情報、アップデート情報をお届けします。">
  <Header />

  <!-- Hero -->
  <section class="news-hero">
    <div class="news-hero-grid-bg"></div>
    <div class="news-hero-glow news-hero-glow-1"></div>
    <div class="news-hero-glow news-hero-glow-2"></div>
    <div class="news-hero-content">
      <span class="news-hero-label">News & Seminars</span>
      <h1>お知らせ</h1>
    </div>
  </section>

  <!-- Article List -->
  <section class="news-list">
    <div class="container">
      {posts.length > 0 ? (
        <div class="news-grid">
          {posts.map((post) => {
            const thumbnail = getFeaturedImageUrl(post);
            const categoryNames = getCategoryNames(post);
            const excerpt = stripHtml(post.excerpt.rendered).slice(0, 80);
            return (
              <a href={`/news/${post.slug}/`} class="news-card">
                <div class="news-card-thumb">
                  {thumbnail ? (
                    <img src={thumbnail} alt={stripHtml(post.title.rendered)} loading="lazy" />
                  ) : (
                    <div class="news-card-thumb-placeholder"></div>
                  )}
                </div>
                <div class="news-card-body">
                  {categoryNames.length > 0 && (
                    <div class="news-card-categories">
                      {categoryNames.map((name) => (
                        <span class="news-card-badge">{name}</span>
                      ))}
                    </div>
                  )}
                  <h2 class="news-card-title" set:html={post.title.rendered} />
                  <time class="news-card-date" datetime={post.date}>{formatDate(post.date)}</time>
                  {excerpt && <p class="news-card-excerpt">{excerpt}{stripHtml(post.excerpt.rendered).length > 80 ? '...' : ''}</p>}
                </div>
              </a>
            );
          })}
        </div>
      ) : (
        <div class="news-empty">
          <p>まだ記事がありません。</p>
        </div>
      )}
    </div>
  </section>

  <Footer />
</Base>

<style>
  /* ==================== Hero ==================== */
  .news-hero {
    position: relative;
    padding: 72px 24px 0;
    background: var(--dark);
    overflow: hidden;
  }

  .news-hero-grid-bg {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(46, 189, 89, 0.05) 1px, transparent 1px),
      linear-gradient(90deg, rgba(46, 189, 89, 0.05) 1px, transparent 1px);
    background-size: 48px 48px;
    mask-image: radial-gradient(ellipse 70% 80% at 50% 50%, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 70% 80% at 50% 50%, black 20%, transparent 70%);
  }

  .news-hero-glow {
    position: absolute;
    width: 500px;
    height: 500px;
    border-radius: 50%;
    filter: blur(120px);
    opacity: 0.12;
    pointer-events: none;
  }

  .news-hero-glow-1 {
    top: -200px;
    left: -100px;
    background: var(--green);
  }

  .news-hero-glow-2 {
    bottom: -200px;
    right: -100px;
    background: var(--blue);
  }

  .news-hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 64px 0 56px;
  }

  .news-hero-label {
    font-family: var(--font-en);
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 3px;
    text-transform: uppercase;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
    margin-bottom: 12px;
  }

  .news-hero-content h1 {
    font-size: 40px;
    font-weight: 800;
    color: var(--white);
    letter-spacing: -0.02em;
    line-height: 1.4;
  }

  /* ==================== Article List ==================== */
  .news-list {
    padding: 64px 0 80px;
    background: var(--white);
  }

  .news-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }

  .news-card {
    display: flex;
    flex-direction: column;
    border-radius: var(--radius-lg);
    border: 1px solid var(--slate-200);
    background: var(--white);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .news-card:hover {
    border-color: var(--slate-300);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .news-card-thumb {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--slate-100);
  }

  .news-card-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .news-card:hover .news-card-thumb img {
    transform: scale(1.04);
  }

  .news-card-thumb-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(46, 189, 89, 0.12), rgba(45, 140, 255, 0.12));
  }

  .news-card-body {
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1;
  }

  .news-card-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .news-card-badge {
    display: inline-block;
    padding: 3px 10px;
    border-radius: 100px;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.02em;
    background: rgba(46, 189, 89, 0.08);
    color: var(--green);
    border: 1px solid rgba(46, 189, 89, 0.15);
  }

  .news-card-title {
    font-size: 18px;
    font-weight: 700;
    color: var(--slate-900);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .news-card-date {
    font-family: var(--font-en);
    font-size: 13px;
    color: var(--slate-400);
    font-weight: 500;
  }

  .news-card-excerpt {
    font-size: 14px;
    color: var(--slate-500);
    line-height: 1.7;
  }

  /* ==================== Empty State ==================== */
  .news-empty {
    text-align: center;
    padding: 80px 24px;
  }

  .news-empty p {
    font-size: 16px;
    color: var(--slate-400);
  }

  /* ==================== Responsive ==================== */
  @media (max-width: 768px) {
    .news-hero-content {
      padding: 48px 0 40px;
    }

    .news-hero-content h1 {
      font-size: 30px;
    }

    .news-list {
      padding: 48px 0 64px;
    }

    .news-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .news-card-body {
      padding: 20px;
    }

    .news-card-title {
      font-size: 16px;
    }
  }
</style>
